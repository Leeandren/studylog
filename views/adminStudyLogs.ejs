<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - All Study Logs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Study Log App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <form class="d-flex mb-3" method="GET" action="/admin/studylogs">
  <input
    type="text"
    class="form-control me-2"
    name="keyword"
    placeholder="Search by topic"
    value="<%= keyword %>"
  />
  <button type="submit" class="btn btn-primary me-2">Filter</button>
    <% if (keyword) { %>
      <a href="/admin/studylogs" class="btn btn-secondary">Clear Filter</a>
    <% } %>
  </form>
  <div class="container mt-5">
    <h2>
      <i class="fas fa-shield-alt me-2"></i>
      Admin Panel - All Users' Study Logs
    </h2>
    <table class="table table-bordered table-striped mt-4">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>User</th>
          <th>Email</th>
          <th>Date</th>
          <th>Topic</th>
          <th>Duration</th>
          <th>Mood</th>
          <th>Notes</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (logs.length === 0) { %>
          <tr>
            <td colspan="9" class="text-center">No logs found.</td>
          </tr>
        <% } else { %>
          <% logs.forEach((log, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= log.username %></td>
              <td><%= log.email %></td>
              <td><%= log.study_date.toISOString().split('T')[0] %></td>
              <td><%= log.topic %></td>
              <td><%= log.duration %> mins</td>
              <td>
                <% 
                  let moodEmoji = '';
                  let moodColor = 'secondary';
                  switch(log.mood) {
                    case 'Happy': moodEmoji = '😊'; moodColor = 'success'; break;
                    case 'Focused': moodEmoji = '🎯'; moodColor = 'primary'; break;
                    case 'Neutral': moodEmoji = '😐'; moodColor = 'secondary'; break;
                    case 'Tired': moodEmoji = '😴'; moodColor = 'warning'; break;
                    case 'Stressed': moodEmoji = '😰'; moodColor = 'danger'; break;
                    case 'Distracted': moodEmoji = '🤯'; moodColor = 'warning'; break;
                    default: moodEmoji = '😐'; moodColor = 'secondary';
                  }    
                %>
                <span class="badge bg-<%= moodColor %> fs-6">
                  <%= moodEmoji %> <%= log.mood %>
                </span>
              </td>
              <td><%= log.notes %></td>
              <td><%= log.created_at.toISOString().split('T')[0] %></td>
              <td>
                <a href="/admin/studylogs/delete/<%= log.log_id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>