<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - All Study Logs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Study Log App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="d-flex justify-content-between align-items-center my-3">
  <form class="d-flex" method="GET" action="/admin/studylogs">
    <input class="form-control me-2" type="search" name="keyword" placeholder="Search by Topic..." value="<%= keyword || '' %>">
    <button class="btn btn-primary me-2" type="submit">Filter</button>
  </form>
  <a href="/admin/studylogs" class="btn btn-secondary">Clear Filter</a>
  </div>
  <div class="container mt-5">
    <h2>All Users' Study Logs</h2>
    <table class="table table-bordered table-striped mt-4">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>User</th>
          <th>Email</th>
          <th>Date</th>
          <th>Topic</th>
          <th>Duration</th>
          <th>Mood</th>
          <th>Notes</th>
          <th>Created At</th>
        </tr>
      </thead>
      <tbody>
        <% if (logs.length === 0) { %>
          <tr>
            <td colspan="9" class="text-center">No logs found.</td>
          </tr>
        <% } else { %>
          <% logs.forEach((log, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= log.username %></td>
              <td><%= log.email %></td>
              <td><%= log.study_date.toISOString().split('T')[0] %></td>
              <td><%= log.topic %></td>
              <td><%= log.duration %> mins</td>
              <td><%= log.mood %></td>
              <td><%= log.notes %></td>
              <td><%= log.created_at.toISOString().split('T')[0] %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
