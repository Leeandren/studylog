<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Results</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Study Log App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/studylog">Back to My Logs</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <h2>Search Results</h2>

    <% if (logs.length === 0) { %>
      <div class="alert alert-warning mt-3">No matching logs found.</div>
    <% } else { %>
      <table class="table table-bordered table-hover mt-4">
        <thead class="table-dark">
          <tr>
            <th>Date</th>
            <th>Topic</th>
            <th>Duration</th>
            <th>Mood</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <% logs.forEach(log => { %>
            <tr>
              <td><%= log.study_date.toISOString().split('T')[0] %></td>
              <td><%= log.topic %></td>
              <td><%= log.duration %> mins</td>
              <td><%= log.mood %></td>
              <td><%= log.notes %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
