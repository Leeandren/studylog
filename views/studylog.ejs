<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Study Logs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Study Log App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <!-- Flash Messages -->
    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(error => { %>
          <p><%= error %></p>
        <% }) %>
      </div>
    <% } %>

    <h2>Welcome, <%= user.username %>!</h2>
      <% if (user.role === 'admin') { %>
        <div class="alert alert-warning">
          <i class="fas fa-crown me-2"></i>
          <strong>Admin Access Available:</strong> 
          <a href="/admin/studylogs" class="btn btn-dark btn-sm ms-2">
            Go to Admin Panel
          </a>
      </div>
    <% } %>
<!-- Statistics Cards with Forced Styling -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-center" style="background-color: #0d6efd !important; color: white !important;">
      <div class="card-body">
        <i class="fas fa-clock fa-2x mb-2" style="color: white !important;"></i>
        <h4 style="color: white !important;"><%= statistics.totalHours %>h</h4>
        <p class="card-text" style="color: white !important;">Total Study Time</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center" style="background-color: #198754 !important; color: white !important;">
      <div class="card-body">
        <i class="fas fa-chart-line fa-2x mb-2" style="color: white !important;"></i>
        <h4 style="color: white !important;"><%= statistics.averageSession %> min</h4>
        <p class="card-text" style="color: white !important;">Average Session</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center" style="background-color: #0dcaf0 !important; color: white !important;">
      <div class="card-body">
        <i class="fas fa-fire fa-2x mb-2" style="color: white !important;"></i>
        <h4 style="color: white !important;"><%= statistics.thisWeekHours %>h</h4>
        <p class="card-text" style="color: white !important;">This Week</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center" style="background-color: #ffc107 !important; color: black !important;">
      <div class="card-body">
        <i class="fas fa-book fa-2x mb-2" style="color: black !important;"></i>
        <h4 style="color: black !important;"><%= statistics.totalSessions %></h4>
        <p class="card-text" style="color: black !important;">Total Sessions</p>
      </div>
    </div>
  </div>
</div>
<!-- ========== STUDY STREAK COUNTER ========== -->
<% if (streak > 0) { %>
  <div class="alert alert-success d-flex align-items-center mb-4" style="background: linear-gradient(135deg, #28a745, #20c997) !important; color: white !important; border: none !important;">
    <div class="me-3">
      <i class="fas fa-fire fa-2x" style="color: #ff6b35 !important;"></i>
    </div>
    <div>
      <h5 class="mb-1" style="color: white !important;">
        🔥 <strong><%= streak %>-Day Study Streak!</strong>
      </h5>
      <p class="mb-0" style="color: white !important;">
        <% if (streak >= 7) { %>
          Amazing dedication! You're on fire! 🚀
        <% } else if (streak >= 3) { %>
          Great momentum! Keep it up! 💪
        <% } else { %>
          Nice start! Build that habit! 📚
        <% } %>
      </p>
    </div>
  </div>
<% } else if (typeof streak !== 'undefined') { %>
  <div class="alert alert-info d-flex align-items-center mb-4">
    <div class="me-3">
      <i class="fas fa-calendar-plus fa-2x text-info"></i>
    </div>
    <div>
      <h6 class="mb-1">Start Your Study Streak!</h6>
      <p class="mb-0">Study today to begin building a consistent learning habit! 📅</p>
    </div>
  </div>
<% } %>
<!-- ========== END STATISTICS CARDS ========== -->

<div class="d-flex gap-2 my-3">
  <a href="/studylog/add" class="btn btn-success">+ Add New Log</a>
  <a href="/studylog/timer" class="btn btn-info">⏱️ Use Timer</a>
</div>

    <form method="GET" action="/studylog" class="d-flex mb-3">
      <input type="text" name="keyword" class="form-control me-2" placeholder="Search by topic..." value="<%= keyword || '' %>">
      <button type="submit" class="btn btn-primary me-2">Search</button>
      <% if (keyword) { %>
        <a href="/studylog" class="btn btn-secondary">Clear Filter</a>
      <% } %>
    </form>

    <% if (logs.length === 0) { %>
      <p>No study logs yet. Start by adding one!</p>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Topic</th>
            <th>Duration (mins)</th>
            <th>Mood</th>
            <th>Notes</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% logs.forEach(log => { %>
            <tr>
              <td><%= log.study_date.toISOString().split('T')[0] %></td>
              <td><%= log.topic %></td>
              <td><%= log.duration %></td>
              <td>
                <% 
                  let moodEmoji = '';
                  let moodColor = 'secondary';
                  switch(log.mood) {
                    case 'Happy': moodEmoji = '😊'; moodColor = 'success'; break;
                    case 'Focused': moodEmoji = '🎯'; moodColor = 'primary'; break;
                    case 'Neutral': moodEmoji = '😐'; moodColor = 'secondary'; break;
                    case 'Tired': moodEmoji = '😴'; moodColor = 'warning'; break;
                    case 'Stressed': moodEmoji = '😰'; moodColor = 'danger'; break;
                    case 'Distracted': moodEmoji = '🤯'; moodColor = 'warning'; break;
                    default: moodEmoji = '😐'; moodColor = 'secondary';
                  }
                %>
                <span class="badge bg-<%= moodColor %> fs-6">
                    <%= moodEmoji %> <%= log.mood %>
                </span>
              </td>
              <td><%= log.notes %></td>
              <td>
                <a href="/studylog/edit/<%= log.id %>" class="btn btn-sm btn-warning">Edit</a>
                <a href="/studylog/delete/<%= log.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>