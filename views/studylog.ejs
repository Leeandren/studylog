<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Study Logs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Study Log App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <!-- Flash Messages -->
    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(error => { %>
          <p><%= error %></p>
        <% }) %>
      </div>
    <% } %>

    <h2>Welcome, <%= user.username %>!</h2>
    <div class="d-flex gap-2 my-3">
      <a href="/studylog/add" class="btn btn-success">+ Add New Log</a>
      <a href="/studylog/timer" class="btn btn-info">⏱️ Use Timer</a>
    </div>
    
    <form method="GET" action="/studylog" class="d-flex mb-3">
      <input type="text" name="keyword" class="form-control me-2" placeholder="Search by topic..." value="<%= keyword %>">
      <button type="submit" class="btn btn-primary me-2">Search</button>
      <% if (keyword) { %>
        <a href="/studylog" class="btn btn-secondary">Clear Filter</a>
      <% } %>
    </form>

    <% if (logs.length === 0) { %>
      <p>No study logs yet. Start by adding one!</p>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Topic</th>
            <th>Duration (mins)</th>
            <th>Mood</th>
            <th>Notes</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% logs.forEach(log => { %>
            <tr>
              <td><%= log.study_date.toISOString().split('T')[0] %></td>
              <td><%= log.topic %></td>
              <td><%= log.duration %></td>
              <td><%= log.mood %></td>
              <td><%= log.notes %></td>
              <td>
                <a href="/studylog/edit/<%= log.id %>" class="btn btn-sm btn-warning">Edit</a>
                <a href="/studylog/delete/<%= log.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
